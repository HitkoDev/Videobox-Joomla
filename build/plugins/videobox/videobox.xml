<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade" version="3.0" >
    <name>plg_system_videobox</name>
    <creationDate>August 2012</creationDate>
    <description>PLG_SYSTEM_VIDEOBOX_XML_DESCRIPTION</description>
    
	<license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
    <author>HitkoDev</author>
    <copyright>Copyright (C) 2016 HtikoDev</copyright>
    <authorEmail>development@hitko.si</authorEmail>
    <authorUrl>https://hitko.eu/videobox/</authorUrl>
    <version>5.0.0-beta4</version>
    
    <files>
        <filename plugin="videobox">videobox.php</filename>
        <filename plugin="videobox">index.html</filename>
    </files>
    
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_system_videobox.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_system_videobox.sys.ini</language>
    </languages>
    
    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/libraries/videobox/fields">
            
                <field name="property_sets" type="PropertySet" filter="raw" default="" label="PLG_SYSTEM_VIDEOBOX_PROPERTY_SETS" description="PLG_SYSTEM_VIDEOBOX_PROPERTY_SETS_DESC" />
                    
            </fieldset>
            
            <fieldset name="vb_main">
                
                <field name="multipleDisplay" type="list" default="gallery" label="PLG_SYSTEM_VIDEOBOX_MULTIPLE_DISPLAY" description="PLG_SYSTEM_VIDEOBOX_MULTIPLE_DISPLAY_DESC" >
                    <option value="gallery">Gallery</option>
                    <option value="links">Links</option>
                    <option value="slider">Slider</option>
                </field>
                
                <field name="singleDisplay" type="list" default="player" label="PLG_SYSTEM_VIDEOBOX_SINGLE_DISPLAY" description="PLG_SYSTEM_VIDEOBOX_SINGLE_DISPLAY_DESC" >
                    <option value="player">Direct player</option>
                    <option value="box">Box</option>
                    <option value="links">Link</option>
                </field>
                
                <field name="player" type="list" default="videobox" label="PLG_SYSTEM_VIDEOBOX_PLAYER" description="PLG_SYSTEM_VIDEOBOX_PLAYER_DESC" >
                    <option value="videobox">Lightbox</option>
                    <option value="vbinline">Inline</option>
                </field>
                
                <field name="pWidth" type="number" default="720" min="1" step="1" label="PLG_SYSTEM_VIDEOBOX_PLAYER_WIDTH" description="PLG_SYSTEM_VIDEOBOX_PLAYER_WIDTH_DESC" />
                
                <field name="pHeight" type="number" default="405" min="1" step="1" label="PLG_SYSTEM_VIDEOBOX_PLAYER_HEIGHT" description="PLG_SYSTEM_VIDEOBOX_PLAYER_HEIGHT_DESC" />
                
                <field name="tWidth" type="number" default="480" min="1" step="1" label="PLG_SYSTEM_VIDEOBOX_THUMBNAIL_WIDTH" description="PLG_SYSTEM_VIDEOBOX_THUMBNAIL_WIDTH_DESC" />
                
                <field name="tHeight" type="number" default="360" min="1" step="1" label="PLG_SYSTEM_VIDEOBOX_THUMBNAIL_HEIGHT" description="PLG_SYSTEM_VIDEOBOX_THUMBNAIL_HEIGHT_DESC" />
                
                <field name="perPage" type="number" default="12" min="1" step="1" label="PLG_SYSTEM_VIDEOBOX_PER_PAGE" description="PLG_SYSTEM_VIDEOBOX_PER_PAGE_DESC" />
                
                <field name="color" type="color" default="#50bf82" label="PLG_SYSTEM_VIDEOBOX_COLOR" description="PLG_SYSTEM_VIDEOBOX_COLOR_DESC" />
                
                <field name="tColor" type="color" default="#005723" label="PLG_SYSTEM_VIDEOBOX_MAIN_COLOR" description="PLG_SYSTEM_VIDEOBOX_MAIN_COLOR_DESC" />
                
                <field name="hColor" type="color" default="#84d1a4" label="PLG_SYSTEM_VIDEOBOX_HOVER_COLOR" description="PLG_SYSTEM_VIDEOBOX_HOVER_COLOR_DESC" />
                
                <field name="delimiter" type="text" default=", " label="PLG_SYSTEM_VIDEOBOX_DELIMITER" description="PLG_SYSTEM_VIDEOBOX_DELIMITER_DESC" />
                
            </fieldset>
            
            <fieldset name="vb_templates">
            
                <field name="boxTpl" type="textarea" rows="10" cols="75" filter="raw" class="vb-tpl" label="PLG_SYSTEM_VIDEOBOX_BOX_TPL" description="PLG_SYSTEM_VIDEOBOX_BOX_TPL_DESC" 
                default="&lt;a href=&quot;[[+link]]&quot; rel=&quot;[[+rel]]&quot; title=&quot;[[+title]]&quot; data-videobox=&quot;[[+vbOptions]]&quot; data-target=&quot;img&quot; class=&quot;vb_video_cont vb_box [[+class]]&quot; style=&quot;[[+style]] max-width: [[+tWidth]]px;&quot; &gt;&#10;&#9;&lt;span class=&quot;vb_thub_wrap&quot;&gt;&lt;img src=&quot;[[++static_path]][[+thumb]]&quot; alt=&quot;[[+title]]&quot; width=&quot;[[+tWidth]]&quot; height=&quot;[[+tHeight]]&quot; /&gt;&lt;span class=&quot;vb-icon-play&quot;&gt;&lt;/span&gt;&lt;/span&gt;&#10;&#9;&lt;span class=&quot;vb_video_title&quot; &gt;[[+title]]&lt;/span&gt;&#10;&lt;/a&gt;" />
            
                <field name="galleryItemTpl" type="textarea" rows="10" cols="75" filter="raw" class="vb-tpl" label="PLG_SYSTEM_VIDEOBOX_GALLERY_ITEM_TPL" description="PLG_SYSTEM_VIDEOBOX_GALLERY_ITEM_TPL_DESC" 
                default="&lt;li class=&quot;vb_video_cont vb_gal&quot; style=&quot;flex: [[+ratio]] [[+ratio]] [[+basis]]px&quot;&gt;[[+content]]&lt;/li&gt;" />
            
                <field name="galleryTpl" type="textarea" rows="10" cols="75" filter="raw" class="vb-tpl" label="PLG_SYSTEM_VIDEOBOX_GALLERY_TPL" description="PLG_SYSTEM_VIDEOBOX_GALLERY_TPL_DESC" 
                default="&lt;ul class=&quot;vb_gallery [[+class]]&quot; style=&quot;[[+style]]&quot;&gt;[[+content]]&lt;/ul&gt;&#10;[[+pagination]]" />
            
                <field name="linkTpl" type="textarea" rows="10" cols="75" filter="raw" class="vb-tpl" label="PLG_SYSTEM_VIDEOBOX_LINK_TPL" description="PLG_SYSTEM_VIDEOBOX_LINK_TPL_DESC" 
                default="&lt;a href=&quot;[[+link]]&quot; class=&quot;vb_link&quot; rel=&quot;[[+rel]]&quot; title=&quot;[[+title]]&quot; data-videowidth=&quot;[[+pWidth]]&quot; data-videoheight=&quot;[[+pHeight]]&quot;&gt;[[+linkText]]&lt;/a&gt;" />
            
                <field name="playerTpl" type="textarea" rows="10" cols="75" filter="raw" class="vb-tpl" label="PLG_SYSTEM_VIDEOBOX_PLAYER_TPL" description="PLG_SYSTEM_VIDEOBOX_PLAYER_TPL_DESC" 
                default="&lt;div class=&quot;vb_video_frame&quot; style=&quot;max-width: [[+pWidth]]px;&quot;&gt;&lt;div class=&quot;vb_video_sizer&quot; style=&quot;padding-bottom: [[+ratio]]%;&quot;&gt;&lt;iframe src=&quot;[[+link]]&quot; frameborder=&quot;0&quot; allowfullscreen oallowfullscreen msallowfullscreen webkitallowfullscreen mozallowfullscreen &gt;&lt;/iframe&gt;&lt;/div&gt;&lt;span class=&quot;vb_video_title&quot; &gt;[[+title]]&lt;/span&gt;&lt;/div&gt;" />
            
                <field name="sliderItemTpl" type="textarea" rows="10" cols="75" filter="raw" class="vb-tpl" label="PLG_SYSTEM_VIDEOBOX_SLIDER_ITEM_TPL" description="PLG_SYSTEM_VIDEOBOX_SLIDER_ITEM_TPL_DESC" 
                default="&lt;li class=&quot;vb_video_cont vb_gal&quot; style=&quot;flex: [[+ratio]] [[+ratio]] [[+basis]]px&quot;&gt;[[+content]]&lt;/li&gt;" />
            
                <field name="sliderTpl" type="textarea" rows="10" cols="75" filter="raw" class="vb-tpl" label="PLG_SYSTEM_VIDEOBOX_SLIDER_TPL" description="PLG_SYSTEM_VIDEOBOX_SLIDER_TPL_DESC" 
                default="&lt;ul class=&quot;vb_gallery vb_slider [[+class]]&quot; data-target=&quot;img&quot; data-move=&quot;[[+move]]&quot; data-width=&quot;[[+basis]]&quot; style=&quot;[[+style]]&quot;&gt;[[+content]]&lt;/ul&gt;" />
            
                <field name="thumbTpl" type="textarea" rows="10" cols="75" filter="raw" class="vb-tpl" label="PLG_SYSTEM_VIDEOBOX_THUMBNAIL_TPL" description="PLG_SYSTEM_VIDEOBOX_THUMBNAIL_TPL_DESC" 
                default="&lt;a href=&quot;[[+link]]&quot; rel=&quot;[[+rel]]&quot; title=&quot;[[+title]]&quot; data-videobox=&quot;[[+vbOptions]]&quot; data-target=&quot;img&quot; style=&quot;max-width: [[+tWidth]]px; &quot;&gt;&#10;&#9;&lt;span class=&quot;vb_thub_wrap&quot;&gt;&lt;img src=&quot;[[++static_path]][[+thumb]]&quot; alt=&quot;[[+title]]&quot; width=&quot;[[+tWidth]]&quot; height=&quot;[[+tHeight]]&quot; /&gt;&lt;span class=&quot;vb-icon-play&quot;&gt;&lt;/span&gt;&lt;/span&gt;&#10;&#9;&lt;span class=&quot;vb_video_title&quot; &gt;[[+title]]&lt;/span&gt;&#10;&lt;/a&gt;" />
                
            </fieldset>
        </fields>
    </config>
</extension>
